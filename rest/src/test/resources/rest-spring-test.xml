<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.3.xsd">

    <context:component-scan base-package="com.epam.brest.course.rest"/>

    <bean id="movieService" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.epam.brest.course.service.MovieService"/>
    </bean>

    <bean id="movieRestController" class="com.epam.brest.course.rest.MovieRestController">
        <property name="movieService" ref="movieService"/>
    </bean>

    <bean id="sessionService" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.epam.brest.course.service.SessionService"/>
    </bean>

    <bean id="sessionRestController" class="com.epam.brest.course.rest.SessionRestController">
        <property name="sessionService" ref="sessionService"/>
    </bean>

</beans>